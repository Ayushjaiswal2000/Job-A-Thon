<script>
  document.querySelectorAll('.dropdown').forEach(dropdown => {
        dropdown.addEventListener('click', function(event) {
            event.stopPropagation(); // Prevent event bubbling
            this.querySelector('.dropdown-content').classList.toggle('hidden');
        });
    });

    // JavaScript to hide dropdown menu when clicking anywhere on the page
    document.addEventListener('click', function(event) {
        document.querySelectorAll('.dropdown-content').forEach(dropdownContent => {
            if (!dropdownContent.classList.contains('hidden')) {
                if (!dropdownContent.parentNode.contains(event.target)) {
                    dropdownContent.classList.add('hidden');
                }
            }
        });
    });
</script>



