<style>
    .job-card {
      background-color: #f3eddb; /* Light grey background */
      border-radius: 10px;
      box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1); /* Add shadow */
      transition: transform 0.3s ease-in-out; /* Add transition for smooth hover effect */
      position: relative; /* Position relative for positioning the actively hiring box */
    }
    .job-card:hover {
      transform: translateY(-5px); /* Move card up slightly on hover */
    }
    .active-box {
      background-color: #ff9800; /* Orange background color */
      color: white; /* White text color */
      position: absolute; /* Position absolutely */
      top: 0; /* Align to the top */
      left: 0; /* Align to the left */
      border-top-left-radius: 10px; /* Border radius to match card */
      border-top-right-radius: 10px; /* Border radius to match card */
      padding: 8px 12px; /* Padding for the box */
      font-size: 0.875rem; /* Font size for the box */
    }
    .not-hiring-box {
      background-color: #ff3333; /* Red background color */
      color: white; /* White text color */
      position: absolute; /* Position absolutely */
      top: 0; /* Align to the top */
      left: 0; /* Align to the left */
      border-top-left-radius: 10px; /* Border radius to match card */
      border-top-right-radius: 10px; /* Border radius to match card */
      padding: 8px 12px; /* Padding for the box */
      font-size: 0.875rem; /* Font size for the box */
    }
    .job-card img {
      max-width: 100%;
      height: auto;
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
    }
    .job-title {
        color: #ff9800; /* Orange text color */
        font-size: 1.5rem; /* Set font size */
        margin-bottom: 0.5rem; /* Add margin bottom */
        margin-top: 1.4rem; /* Add top margin */
        position: relative; /* Position relative for pseudo-element */
        display: inline-block; /* Make it inline block */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); /* Text shadow effect */
    }

   
    .job-info i {
        color:#ff9800; /* Inherit color from parent (job title) */
        margin-right: 4px; /* Add some margin between icon and text */
    }
    .job-company {
      color: #666;
      font-size: 1rem;
      margin-bottom: 0.5rem; /* Add margin bottom */
      font-weight: bold; /* Make text bold */
    }
    .job-description {
      color: #444;
      font-size: 1rem;
      margin-bottom: 0.5rem; /* Add margin bottom */
    }
    .job-location {
      color: #777;
      font-size: 0.875rem;
      margin-bottom: 0.5rem; /* Add margin bottom */
    }
    .job-salary {
      color: #555;
      font-size: 1rem;
      margin-bottom: 0.5rem; /* Add margin bottom */
    }
    .job-experience {
      color: #555;
      font-size: 1rem; /* Add margin bottom */
    }
    .btn-apply {
      background-color: #ff9800; /* Orange button */
      border-color: #ff9800; /* Orange border for button */
      transition: background-color 0.3s ease-in-out, border-color 0.3s ease-in-out; /* Add transition for smooth hover effect */
    }
    .btn-apply:hover {
      background-color: #f57c00; /* Darker shade of orange on hover */
      border-color: #f57c00; /* Darker shade of orange border on hover */
    }
    .btn-view-more {
      color: #f57c00 !important; /* Blue link color */
      border: none; /* Remove border */
      background: none; /* Remove background */
      cursor: pointer; /* Change cursor to pointer */
      width: 50%; /* Set width to half */
      text-align: left;
      margin-top: -30px; /* Align text to the left */
    }
    .btn-view-more:hover {
      text-decoration: underline; /* Underline text on hover */
    }
</style>

</head>

<div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% jobs.forEach(job => { %>
            <!-- Job Card -->
            <div class="job-card relative p-6 <% if(job.active) { %>active<% } %>">
                <% if(job.active) { %>
                    <div class="active-box">Actively Hiring</div>
                <% } else { %>
                    <div class="not-hiring-box">Not Hiring</div>
                <% } %>
                <h2 class="job-title mb-2"><%= job.title %></h2>
                <p class="job-company mb-2"><%= job.company %></p>
                
                <p class="job-info mb-2">
                    <i class="fas fa-map-marker-alt"></i> <%= job.location %>
                </p>
                <p class="job-info mb-2">
                    <i class="fas fa-money-bill-wave"></i> <%= job.salary %>
                </p>
                <p class="job-info mb-2">
                    <i class="fas fa-briefcase"></i> <%= job.experience %>
                </p>
                <a href="/ViewMore/<%= job.id %>" class="btn-view-more w-full py-2 rounded-md text-white font-semibold transition duration-300 ease-in-out">View More</a>


                <button class="btn-apply w-full py-2 rounded-md text-white font-semibold transition duration-300 ease-in-out">Apply Now</button>
            </div>
            <!-- End Job Card -->
        <% }); %>
    </div>
</div>

<div id="error-container" class="mt-4 text-red-600 text-center">
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="bg-white shadow rounded p-4">
            <ul>
                <% errors.forEach(function(error) { %>
                    <li><%= error.msg %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>
</div>
