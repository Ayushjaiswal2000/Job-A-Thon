<div class="container mx-auto p-8">
    <h1 class="text-3xl text-center mb-8">Job Application Details</h1>
    <div class="overflow-x-auto">
        <table class="table-auto w-full">
            <thead>
                <tr class="bg-orange-500 text-white">
                    <th class="px-4 py-2">Name</th>
                    <th class="px-4 py-2">Email</th>
                    <th class="px-4 py-2">Phone</th>
                    <th class="px-4 py-2">Resume</th>
                    <th class="px-4 py-2">Portfolio</th>
                </tr>
            </thead>
            <tbody>
                <% applications.forEach(application => { %>
                    <tr class="border-b border-gray-300">
                        <td class="px-4 py-2"><%= application.name %></td>
                        <td class="px-4 py-2"><%= application.email %></td>
                        <td class="px-4 py-2"><%= application.phone %></td>
                        <td class="px-4 py-2"><a href="<%= application.resume %>" class="text-blue-600 underline">Download Resume</a></td>
                        <td class="px-4 py-2"><a href="<%= application.portfolio %>" class="text-blue-600 underline">Portfolio</a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>
